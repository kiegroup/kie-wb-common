        <configuration>
          <systemPropertyVariables>
            <errai.cdi.veto.pattern>(^|.*\.)client\.local(\..*)</errai.cdi.veto.pattern>
          </systemPropertyVariables>
        </configuration>
      </plugin>
    </plugins>
